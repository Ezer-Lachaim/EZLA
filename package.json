    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@sentry/react": "^7.64.0",
    "@sentry/vite-plugin": "^2.7.0",
    "@tanstack/react-query": "^4.7.1",
    "react-hook-form-persist": "^3.0.0",
    "uuid": "^9.0.0"
  }
